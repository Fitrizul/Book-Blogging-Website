<%- include('partials/header.ejs'); -%>

<body>
        <%- include('partials/navbar.ejs'); -%>

        <section id="herosection">
            <div class="px-4 py-1 my-4 text-center">
                <h1 class="display-5 fw-bold ">Bookworm Bliss</h1>
                <div class="col-lg-6 mx-auto">
                    <h2 class="lead mb-4">Discovering New Horizons in Books</h2>

                </div>
            </div>
        </section>
    
    

        <section id="allbooks">
        
            <% if(locals.books) {%>

                <% books.forEach(function(book) { %>
                    <div class="container">
                        <div class="row featurette ms-5 py-4">
                            <div class="col-md-8 order-md-2">
                                <h3 class="featurette-heading fw-normal lh-1 titleBook">
                                        <%= book.book_title %>
                                </h3>
                                <h3 class="featurette-heading fw-normal by ">by <%= book.book_author %>
                                </h3>
                                <p id="#allbooks" > ISBN: <%= book.book_isbn %>
                                </p>
                                <p id="#allbooks"> First published in <%= book.book_publishyear  %></p>
                                <p id="#allbooks"> My recommendation on this book : <%= book.rating %>/5
                                </p>
                                <p class="lead">
                                    <%= book.review  %>
                                </p>
                                <div class="d-inline-flex ">
                                    <form action="/editForm" method="POST">
                                        <input type ="hidden" name = "bookid" value="<%= book.id  %>">
                                        <input type="submit" class="btn btn-success fw-semibold editInfo" value="Edit Review">
                                    </form>
                                    <form action="/delete" method="POST">
                                        <input type ="hidden" name = "bookid" value="<%= book.id  %>">
                                        <input type="submit" class="btn btn-danger fw-semibold deleteBook" value="Delete">
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-3 order-md-1 ">
                                <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image mx-auto" width="240" height="340" src="https://covers.openlibrary.org/b/isbn/<%= book.book_isbn %>-L.jpg?default=false" preserveaspectratio="xMidYMid slice" focusable="false" onerror="this.src='images/avatar_book-sm.png'">
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
                      
        </section>
        
    <%- include('partials/footer.ejs'); -%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
   
      



</body></html>