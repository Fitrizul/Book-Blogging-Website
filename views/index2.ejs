<html lang="en" ><head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MY Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/style.css">
    <link rel="icon" type="image/svg+xml" href="assests/book.svg">
</head>

<body>
    <form action="/search" method="POST">
        <input type ="text" name = "title">
        <input type="submit" class="btn1" value="Search">
    </form> 
    <% if(locals.books) {%>

        <% books.forEach(function(book) { %>

            <% if (book.isbn && book.isbn.length > 0) { %>

                <p>Title: <%= book.title %></p>       
                <p>ISBN: <%= book.isbn[0] %></p>
                <img src ="https://covers.openlibrary.org/b/isbn/<%= book.isbn[0] %>-L.jpg?default=false" id="bookImage" width="250" height="300" onerror="this.src='images/avatar_book-sm.png'">
           
            <% } %>

        <% }); %>
    <% } %>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
   
      



</body></html>