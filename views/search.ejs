<%- include('partials/header.ejs'); -%>

<body>

    <%- include('partials/navbar.ejs'); -%>
    
    <section id="herosection">
        <div class="px-4 py-1 my-4 text-center">
            <h1 class="display-5 fw-bold ">Bookworm Bliss</h1>
            <div class="col-lg-6 mx-auto">
                <h1 class="lead my-4">Search Result</h1>

            </div>
        </div>
    </section>

    <section id="allbookSearch">
        <% if(locals.books) { %>
            <div class="container">
                <div class="row"> <!-- Increased gutter between rows -->
                    <% books.forEach(function(book) { %>
                        <% if (book.isbn && book.isbn.length > 0) { %>
                            <div class="col-md-6 g-5">
                                <div class="container bookIndividual">
                                    <div class="row featurette py-4"> <!-- Adjusted margin start and padding -->
                                        <div class="col-md-8 order-md-2">
                                            <h4 class="featurette-heading fw-normal lh-1 titleBook">
                                                <%= book.title %>
                                            </h4>
                                            <h4 class="featurette-heading fw-normal by">
                                                by <%= book.author_name %>
                                            </h4>
                                            <p id="#allbooks"> ISBN: <%= book.isbn[0] %> </p>
                                            <p id="#allbooks"> First published in <%= book.first_publish_year %></p>
                                            <form action="/addForm" method="POST">
                                                <input type ="hidden" name = "title" value="<%= book.title %>">
                                                <input type ="hidden" name = "author" value="<%= book.author_name %>">
                                                <input type ="hidden" name = "isbn" value="<%= book.isbn[0] %>">
                                                <input type ="hidden" name = "yearPublish" value="<%= book.first_publish_year %>">
                                                <input type="submit" class="btn btn-primary fw-semibold addList" value="Add To List">
                                            </form> 
                                        </div>
                                        <div class="col-md-4 order-md-1">
                                            <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image mx-auto" width="150" height="200" src="https://covers.openlibrary.org/b/isbn/<%= book.isbn[0] %>-L.jpg?default=false" preserveaspectratio="xMidYMid slice" focusable="false" onerror="this.src='images/avatar_book-sm.png'">
                                        </div>
                                    </div>
                                </div>  
                            </div>
                        <% } %>           
                    <% }); %>
                </div>
            </div>
        <% } %>        
    </section>
    
    <%- include('partials/footer.ejs'); -%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
   
</body>
</html>